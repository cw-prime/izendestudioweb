# Izende Studio Web - Simplified .htaccess for Testing
# Original complex .htaccess temporarily disabled

# Allow directory access
Options -Indexes +FollowSymLinks

# Protect sensitive files
<FilesMatch "^(\.env|\.git.*|composer\.(json|lock)|.*\.log|.*\.bak|.*\.sql)$">
    Require all denied
</FilesMatch>

# Protect WordPress config
<Files "wp-config.php">
    Require all denied
</Files>

# Protect config directory (EXCEPT admin/config for CMS)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Allow /admin/config/ for CMS functionality
    RewriteCond %{REQUEST_URI} !^/izendestudioweb/admin/
    RewriteRule ^config/ - [F,L]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

